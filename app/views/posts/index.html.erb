<div class="title">
  <h1>Posts listing</h1>
</div>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Options</th>
  </tr>

  <% @posts.each do |post| %>
    <tr class="post-list">
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= link_to 'Show', post_path(post) %> | <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<div id="new-post">
  <%= link_to 'New Blog Post', new_post_path %>
</div>